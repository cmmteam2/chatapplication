<head>
    <style>
    html, body {
  height: 100%;
  margin: 0;
}
    #channel_nav{
      display:none;
    }
    #sidenav{
      background:url("images/night.jpg");
      background-position:center;
      background-repeat:no-repeat;
      background-attachment:fixed;
      background-size:cover;
    }
    ul#sidenavul1{
      list-style-type:none;
      margin:0;
      overflow:hidden;
      padding:0;
    }
    ul#sidenavul1 li{
      float:left;
      display:block;
      width:100%;
      margin:0;
    }
    ul#sidenavul1 li a{
      
      display:block;
      text-align:left;
      font-size:18px;
      color:springgreen;
      padding:10px;
      text-decoration:none;
      padding-left:10%;
      font-family:Courier New, monospace
    }
    ul#sidenavul1 li a:hover{
      background-color:springgreen;
      color:black;
    }

    ul#sidenavul2{
      list-style-type:none;
      margin:0;
      overflow:hidden;
      padding:0;
    }
    ul#sidenavul2 li{
      float:left;
      display:block;
      width:100%;
      margin:0;
    }
    ul#sidenavul2 li a{
      
      display:block;
      text-align:left;
      font-size:18px;
      color:springgreen;
      padding:10px;
      text-decoration:none;
      padding-left:10%;
      font-family:Courier New, monospace;
    }
    ul#sidenavul2 li a:hover{
      background-color:springgreen;
      color:black;
    }
    
    </style>
</head>
<body>
<div id="sidenav" style="z-index:3;width:350px;height:100%;position:fixed;top:0;left:0;font-family:Courier New, monospace">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert alert-info" %>
    <% end %>

    <p style="font-size:24px;padding:2% 0;color:white;font-family:Courier New, monospace">
    <div class="dropdown">
    <p class="dropdown-toggle" data-toggle="dropdown" style="font-size:18px;text-align:center;cursor:pointer;color:springgreen;">
    <%= session[:currentworkspace] %>
    <span class="caret"></span></p>
    <ul class="dropdown-menu" >
    <li><a href="/createworkspace" style="cursor: pointer;"><p style="font-size:18px;padding:2% 0;color:black;font-family:Courier New, monospace;"><%= t 'createworkspace' %></p></a></li>
    <% if session[:user]["id"] == session[:workspace_owner] %>
        <li><a href="/editworkspace_<%= session[:user]['currentworkspace']%>" style="cursor: pointer;"><p style="font-size:18px;padding:2% 0;color:black;font-family:Courier New, monospace;"><%= t 'editworkspace' %></p></a></li>
        <li><a href="/delws_<%= session[:user]['currentworkspace']%>" style="cursor: pointer;"><p style="font-size:18px;padding:2% 0;color:black;font-family:Courier New, monospace;"><%= t 'deleteworkspace' %></p></a></li>
    <% else %>
        
    <% end %>
   
    </ul>
  </div>
    </p>
    <div style="width:80%;height:300px;background-color:#2d2e30;border-radius:10px;display:block;margin:0 auto;margin-top:10%;">
      <img src="images/user1.jpg" style="width:100%;height:100%;">
      <div style="background-color:black;color:white;text-align:center;font-size:18px;"><%= session[:user]["name"] %></div>
    </div>
    
    <hr style="border:1px solid black;">
    <hr style="border:1px solid black;">
    <ul id="sidenavul1">
    <p onclick="open_channel_nav()" style="cursor:pointer;font-size:24px;padding:2% 0;color:white;font-family:Courier New, monospace"><%= t 'channel' %></p>
    <div style="background-color:white;overflow:hidden;" id="channel_nav">
      <li><a style="color:black;" href="/createchannel"><%= t 'createchannel' %></a></li>
    </div>
    <% @group.each do |a| %>
      <% mygp = 0 %>
      <% @uhgs.each do |uhg| %>
        <% if uhg.group_id == a.id and uhg.user_id == session[:user]["id"] %>
            <% mygp = 1 %>
        <% end %>
      <% end %>
      <% if mygp == 1 %>
        <li><a href="/views_<%=a.id %>"><%= a.name %></a></li>
      <% else %>
        <% if a.types == "public" %>
          <li><a href="/views_<%=a.id %>"><%= a.name %></a></li>
        <% end %>
      <% end %>
      
    <% end %>
    
    </ul>
    <hr style="border:1px solid black;">
    <ul id="sidenavul2">
    <p style="cursor:pointer;font-size:24px;padding:2% 0;color:white;font-family:Courier New, monospace"><%= t 'directmessages' %></p>
      <% @uhw.each do |a| %>
        <li><a href="#"><%= a.user.name %></a></li>
      <% end %>
    
    </ul>
    <hr style="border:1px solid black;">
    <div style="">
    <p style="font-size:24px;padding:2% 0;color:white;font-family:Courier New, monospace"><%= t 'setting' %><i class="fa fa-cog"></i></p>
      <div style="padding:10px;">
      <p><a href="#" style="text-decoration:none;color:white;font-family:Courier New, monospace;font-size:18px;display:block;padding:2% 0;"><%= t 'accsetting' %></a></p>
      <p><a href="#" style="text-decoration:none;color:white;font-family:Courier New, monospace;font-size:18px;display:block;padding:2% 0;"><%= t 'textformatsetting' %></a></p>
      <p><a href="#" style="text-decoration:none;color:white;font-family:Courier New, monospace;font-size:18px;display:block;padding:2% 0;"><%= t 'usermanagementsetting' %></a></p>
      <p><a href="#" style="text-decoration:none;color:white;font-family:Courier New, monospace;font-size:18px;display:block;padding:2% 0;"><%= t 'privacy' %></a></p>
      <p><a href="/logout" style="text-decoration:none;color:white;font-family:Courier New, monospace;font-size:18px;display:block;padding:2% 0;"><%= t 'logout' %></a></p>
    
      </div>
    </div>
    
</div>
    <script>
    $(document).ready(function(){
      $("#sidenav").mouseenter(function(){
        $("#sidenav").css("overflow", "auto");
      });
      $("#sidenav").mouseleave(function(){
        $("#sidenav").css("overflow", "hidden");
      });
    });

    function open_channel_nav(){
      if(document.getElementById("channel_nav").style.display == "block")
        document.getElementById("channel_nav").style.display = "none";
      else
        document.getElementById("channel_nav").style.display = "block";
        
    }
    </script>
</body>